<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg16">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textColor="#DF0101"
        android:textSize="30dp"
        android:text="Editar Perfil"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario: "
            android:id="@+id/textView20"
            android:layout_gravity="center_horizontal|top"
            android:textSize="22dp"
        android:textColor="#fff"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin@mochileron.com"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal|top"

            android:textSize="22dp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:background="#802E2E2E"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:layout_margin="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/textView22"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#FFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/ednombre"
            android:text="Cristian"
            android:textColor="#FFF"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/edit"
            android:id="@+id/editnombre"
            android:onClick="modificarnomOnclick" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ok"
            android:id="@+id/oknom"
            android:onClick="ok1Onclick"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:id="@+id/textView23"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/edapellido"
            android:textColor="#FFF"
            android:text="Cortes" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/edit"
            android:id="@+id/editapellido"
            android:onClick="modificarnapeOnclick"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ok"
            android:id="@+id/okape"
            android:onClick="ok2Onclick"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        android:id="@+id/textView24"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#fff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="30dp">

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/edubicacion"
            android:textColor="#FFF"
            android:text="Psj. Los tulipanes" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/edit"
            android:id="@+id/editubicacion"
            android:onClick="modificarnubicaOnclick" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ok"
            android:id="@+id/okubica"
            android:onClick="ok3Onclick"
            />
    </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>