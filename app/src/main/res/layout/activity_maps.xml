<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/splash9"
    >

<fragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/map"
    tools:context="com.example.cacp.mochileros.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Marcadores"
        android:id="@+id/btmarcadores"
        android:layout_margin="10dp"
        android:onClick="marcadoresOnclick"
       />
        <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
            android:textColor="#fff"
        android:text="Sujerir Lugar"
        android:id="@+id/btsujerir"
        android:layout_margin="10dp"
        android:background="#BFFF0000"
        android:onClick="SujerirLugarOnclick"
            android:visibility="gone"

        />
    </LinearLayout>

</RelativeLayout>
